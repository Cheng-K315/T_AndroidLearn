<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码："
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/old_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入原密码"
            android:background="@drawable/editview"
            android:drawablePadding="10dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/new_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv0"
            android:hint="请输入新密码"
            android:drawableLeft="@drawable/password"
            android:background="@drawable/editview"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:inputType="textPassword"/>
        <ImageButton
            android:id="@+id/img_look1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/new_ps"
            android:layout_centerVertical="true"
            android:background="@drawable/unlook"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/again_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认您的密码"
            android:drawableLeft="@drawable/password"
            android:layout_toRightOf="@id/tv1"
            android:background="@drawable/editview"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:inputType="textPassword"/>
        <ImageButton
            android:id="@+id/img_look2"
            android:layout_alignRight="@id/again_ps"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/unlook"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btn_commit_ps"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btn_cancel_ps"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="取消"
            android:textSize="25sp"/>
    </LinearLayout>

</LinearLayout>