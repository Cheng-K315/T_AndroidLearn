<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:id="@+id/rl">

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>
    <RelativeLayout
        android:id="@+id/rl_more_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1">
        <ImageView
            android:id="@+id/img_more_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/more_bg"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/tv_more_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="改变壁纸"
            android:layout_toRightOf="@+id/img_more_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/rl_more_bg"/>
    <LinearLayout
        android:id="@+id/ll_more_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_more_bg"
        android:visibility="gone">
        <TextView
            android:id="@+id/green_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="青瓦白墙"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@color/green_bg"/>
        <TextView
            android:id="@+id/pink_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="粉状玉砌"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@color/pink_bg"/>
        <TextView
            android:id="@+id/blue_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="蓝色梦想"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@color/blue_bg"/>
    </LinearLayout>
    <View
        android:id="@+id/v22"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/ll_more_color"/>
    <RelativeLayout
        android:id="@+id/rl_more_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v22">
        <ImageView
            android:id="@+id/img_more_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/more_version"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/tv_more_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前版本：v1.0"
            android:layout_toRightOf="@+id/img_more_version"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/rl_more_version"/>
    <RelativeLayout
        android:id="@+id/rl_more_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3">
        <ImageView
            android:id="@+id/img_more_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/more_cache"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/tv_more_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:layout_toRightOf="@+id/img_more_cache"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/rl_more_cache"/>
    <RelativeLayout
        android:id="@+id/rl_more_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v4">
        <ImageView
            android:id="@+id/img_more_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/more_share"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/tv_more_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享软件"
            android:layout_toRightOf="@+id/img_more_share"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/rl_more_share"/>
    <RelativeLayout
        android:id="@+id/rl_more_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v5">
        <ImageView
            android:id="@+id/img_more_password"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/more_password"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/tv_more_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_toRightOf="@+id/img_more_password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/v6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/rl_more_password"/>
    <LinearLayout
        android:id="@+id/ll_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v6"
        android:orientation="horizontal"
        android:visibility="gone">
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="请输入新密码"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/et_new_password"/>
    </LinearLayout>
</RelativeLayout>