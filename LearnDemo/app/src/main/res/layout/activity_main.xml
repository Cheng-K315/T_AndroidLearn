<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_mainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到自身Activity"
        android:background="@drawable/bg_button"/>
    <Button
        android:id="@+id/btn_secondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到第二个Activity"
        android:background="@drawable/bg_button"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btn_thirdActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到第三个Activity"
        android:background="@drawable/bg_button"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btn_fourthActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到第四个Activity"
        android:background="@drawable/bg_button"
        android:layout_marginTop="5dp"/>

</LinearLayout>